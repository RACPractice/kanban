.row
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well form-horizontal'})  do |f|
      %fieldset
        %legend=t('login.sign_up')
        = render :partial => "devise/language"
        = render :partial => 'common/flashes'
        .control-group
          = f.label :full_name, :class => 'control-label'
          .controls
            = f.text_field :full_name, :class => 'text_field', :placeholder => t('login.placeholders.full_name')
        .control-group
          = f.label :email, :class => 'control-label'
          .controls
            = f.email_field :email, :class => 'text_field', :placeholder => t('login.placeholders.email')

        .control-group
          = f.label :password, :class => 'control-label'
          .controls
            = f.password_field :password, :class => 'text_field', :placeholder => t('login.placeholders.password')

        .control-group
          = f.label :password_confirmation, :class => 'control-label'
          .controls
            = f.password_field :password_confirmation, :class => 'text_field'

        .form-actions
          = f.submit t('login.sign_up'), :class => 'btn btn-primary'
        .controls
          = render "links"
