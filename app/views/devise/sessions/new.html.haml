.row-fluid
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'well form-horizontal'}) do |f|
      %fieldset
        %legend Sign in
        = render :partial => 'common/flashes'
        .control-group
          = f.label :login, "Username or email", :class => 'control-label'
          .controls
            = f.text_field :login
        .control-group
          = f.label :password, :class => 'control-label'
          .controls
            = f.password_field :password
        -if devise_mapping.rememberable?
          .control-group
            = f.label :remember_me, :class => 'control-label'
            .controls
              = f.check_box :remember_me
        .form-actions
          = content_tag :button,  :type => :submit, :class => 'btn btn-primary' do
            Sign in
      .controls
        = render "devise/shared/links"
