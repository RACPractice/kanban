%li.step.not_remvable{data: {bind: "attr: {style: 'min-width:200px; width:' + stepWidth() + '%;'}"}}
  .list-header
    .list-title
      .editor
        %h4.view.step_name{data: {bind: "text: backlog_step.name"}}
        %form
      %a.icon-sm.icon-menu.dark-hover.js-open-list-menu{href: '#', data:{toggle: 'dropdown'}}
        %i.icon-th-list
        %ul.dropdown-menu{:role => 'menu', 'aria-labelledby' => 'dropdownMenu' }
          %li
            %a{tabindex: '-1', href: '#', data: {bind: 'click: backlog_step.showWorkItemForm'}} Add Work Item
          %li.divider
          %li
            %a.deleteStep{:tabindex => '-1', :href => "#", data: {bind: 'click: deleteStep'}} Delete step
  %div{style: 'display:none;', data: {bind: 'attr: {class: "card-composer work-item-for-step-" + backlog_step.id}'}}
    .list-card.js-composer
      .card-labels.clearfix
      %textarea{data: {bind: 'attr: {class: "js-card-title work-item-name-for-step-" + backlog_step.id}'}}
      .list-card-members
    .cc-controls.clearfix
      %button.btn.btn-mini.btn-primary{data: {bind: 'click: backlog_step.addWorkItem'}} Add
      %a.icon-lg.dark-hover.js-cancel{href: '#', data: {bind: 'click: backlog_step.closeForm'}}
        %i.icon-remove

  .ui-widget-content
    %ul.default.work_items.sortable{data: {bind: "foreach:backlog_step.work_items, sortableList: {list:backlog_step.work_items, connectWith: '.sortable'}"}}
      %li{data: {bind: "text:name, sortableItem: {item: $data, parentList: $parent.work_items}"}}
