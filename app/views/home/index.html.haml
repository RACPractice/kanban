.row-fluid.elements
  .span6.offset1
    Welcome to Kanban Dashboard
    -if @projects.any?
      %h3
        Projects
      %ul.nav.nav-list
        - @projects.each do |p|
          %li= link_to p.name, account_project_path(p.account, p)
  .span4
    %p
      -if current_user.avatar.present?
        =image_tag current_user.avatar.url(:medium)
      -else
        =image_tag "default_user_icon_128.png"
    %p
      = current_user.full_name
      %br
      = current_user.username
      %br
      = current_user.email
    %ul.nav.nav-list
      %li.active=link_to 'Projects', root_path
      %li=link_to 'Accounts', accounts_path
      %li=link_to 'My Profile', profile_path
    %hr
  .offset1
